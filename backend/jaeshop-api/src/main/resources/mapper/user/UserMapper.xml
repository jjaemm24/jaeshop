<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jaeshop.modules.user.mapper.UserMapper">

    <select id="findByEmail" resultType="com.jaeshop.modules.user.domain.User">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>

    <insert id="saveUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (email, password, name, phone)
        VALUES (#{email}, #{password}, #{name}, #{phone})
    </insert>

    <select id="findById" resultType="com.jaeshop.modules.user.domain.User">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>

</mapper>